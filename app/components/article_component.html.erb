<!-- app/components/article_component.html.erb -->
<div class="border-b dark:border-gray-400 border-gray-700 w-full pb-2 mb-4">
  <div class="flex justify-between items-center">
    <% if @article.url.present? %>
      <%= link_to 'Read more', @article.url, target: '_blank' %>
    <% else %>
      <h3 class="font-normal text-gray-500 lex dark:text-gray-300"><%= @article.title %></h3>
    <% end %>
    <% if @article.sponsored %>
      <div class="bg-indigo-100 text-indigo-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-indigo-900 dark:text-indigo-300">
        sponsored by: <%= @article.sponsored_by %>
      </div>
    <% end %>
  </div>
  <%= link_to food_for_thought_path(@article) do %>
    <div class="flex justify-start items-center space-x-2">
      <div class="w-6 h-6 flex-shrink-0 text-gray-500 lex dark:text-gray-300">
        <svg fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <path clip-rule="evenodd" fill-rule="evenodd" d="M5.625 1.5c-1.036 0-1.875.84-1.875 1.875v17.25c0 1.035.84 1.875 1.875 1.875h12.75c1.035 0 1.875-.84 1.875-1.875V12.75A3.75 3.75 0 0016.5 9h-1.875a1.875 1.875 0 01-1.875-1.875V5.25A3.75 3.75 0 009 1.5H5.625zM7.5 15a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5A.75.75 0 017.5 15zm.75 2.25a.75.75 0 000 1.5H12a.75.75 0 000-1.5H8.25z"></path>
          <path d="M12.971 1.816A5.23 5.23 0 0114.25 5.25v1.875c0 .207.168.375.375.375H16.5a5.23 5.23 0 013.434 1.279 9.768 9.768 0 00-6.963-6.963z"></path>
        </svg>
      </div>
      <div class="w-full p-3 text-xs font-normal text-gray-500 border border-gray-200 rounded-lg bg-gray-50 dark:bg-gray-600 dark:border-gray-500 dark:text-gray-300">
        <%= @article.summary %>
      </div>
    </div>
  <% end %>
</div>
