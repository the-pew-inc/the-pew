<%# app/views/question_answers/_form.html.erb %>
<div class="fixed top-0 left-0 right-0 z-50 w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full flex items-center justify-center bg-black bg-opacity-50">
  <div class="relative bg-white rounded-lg shadow mx-auto my-auto dark:bg-gray-700">
    <!-- Modal content -->
    <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
      <!-- Modal header -->
      <div class="flex items-start justify-between p-4 border-b rounded-t dark:border-gray-600">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
          <%= title %>
          <div class="flex items-center space-x-3 mb-2 text-gray-500 dark:text-gray-400 font-medium text-sm">
            <svg class="w-6 h-6 shrink-0" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path clip-rule="evenodd" fill-rule="evenodd" d="M4.848 2.771A49.144 49.144 0 0112 2.25c2.43 0 4.817.178 7.152.52 1.978.292 3.348 2.024 3.348 3.97v6.02c0 1.946-1.37 3.678-3.348 3.97-1.94.284-3.916.455-5.922.505a.39.39 0 00-.266.112L8.78 21.53A.75.75 0 017.5 21v-3.955a48.842 48.842 0 01-2.652-.316c-1.978-.29-3.348-2.024-3.348-3.97V6.741c0-1.946 1.37-3.68 3.348-3.97z"></path>
            </svg>
            <div>
              <%= question.title %>
            </div>
          </div>
        </h3>
        <%= link_to nil, data: { action: "turbo-modal#close" }, class: "text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" do %>
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
          </svg>
          <span class="sr-only">Close modal</span>
        <% end %>
      </div>
      <!-- Modal body -->
      <div class="p-6 space-y-6">
        <% if question_answer.persisted? %>
          <%= form_with model: [question, question_answer], url: question_question_answer_path(question), method: :patch, local: false do |form| %>
            <%= render partial: 'shared/form_errors', locals: { object: question_answer } %>
            <%= form.rich_text_area :text_answer %>
            <div class="flex justify-between items-center pt-6 space-x-2 border-t border-gray-200 rounded-b dark:border-gray-600">
              <div>
                <%= form.submit "Update", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
                <%= link_to "Cancel", nil,
                  data: { action: "turbo-modal#close" },
                  class: "text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600" %>
              </div>
              <%= link_to 'Delete', question_question_answer_path(question), data: { turbo_method: :delete }, class: "text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800" %>
            </div>
          <% end %>
        <% else %>
          <%= form_with model: [question, question_answer], url: question_question_answer_path(question), method: :post, local: false do |form| %>
            <%= form.rich_text_area :text_answer %>
            <!-- Modal footer -->
            <div class="flex items-center pt-6 space-x-2 border-t border-gray-200 rounded-b dark:border-gray-600">
              <%= form.submit "Save", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
              <%= link_to "Cancel", nil,
          data: { action: "turbo-modal#close" },
          class: "text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
