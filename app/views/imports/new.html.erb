<!-- app/views/imports/new.html.erb -->
<%= turbo_frame_tag "settings_main" do %>
  <%= render partial: "settings/breadcrumb", locals: { sub1: "Users" } %>
  <%= form_with(url: imports_path, local: true) do |form| %>
    <div class="mb-2">
      <%= form.label :file, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" do %>
        Upload a list of users
      <% end %>
      <%= form.file_field :file, required: true, accept: '.xlsx', class: 'block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400' %>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-300" id="file_input_help">File must be .xlsx</p>
    </div>
    <%= form.submit 'Upload File', class: 'text-blue-700 hover:text-white border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-500 dark:focus:ring-blue-800' %>
  <% end %>
<% end %>
