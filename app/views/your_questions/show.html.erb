<div class="container pt-4">
  <div class="mb-6">
    <%= link_to :back, class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" do %>
      <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12h-15m0 0l6.75 6.75M4.5 12l6.75-6.75"></path>
      </svg>
      Back
    <% end %>
  </div>
  <section>
    <h1 class="inline-block mb-2 font-extrabold text-3xl tracking-tight text-slate-800 dark:text-white">
      <%= @question.title %>
    </h1>
    <div class="flex flex-col space-y-3">
      <div>
        <h3 class="text-gray-400 text-xl font-light">Status:</h3>
        <div class="flex flex-row justify-start items-center space-x-2">
          <%= display_question_status(@question.status) %>
          <% if @question.status == 'rejected' %>
            <span class="text-gray-500 dark:text-gray-400 text-sm text-center">as</span>
            <span class="bg-gray-100 text-gray-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-400 border border-gray-500">
              <%= @question.rejection_cause  %>
            </span>
          <% end %>
        </div>
      </div>
      <div>
        <h3 class="text-gray-400 text-xl font-light">Stats:</h3>
        <div class="flex flex-row space-x-4 justify-start items-center text-gray-500 dark:text-gray-400 font-light">
          <div>
            Created At: <%= @question.created_at.strftime('%Y-%m-%d %H:%M:%S') %>
          </div>
          <div class="flex flex-row space-x-2 justify-start items-center">
            <p class="w-4 h-4">
              <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.114 5.636a9 9 0 010 12.728M16.463 8.288a5.25 5.25 0 010 7.424M6.75 8.25l4.72-4.72a.75.75 0 011.28.53v15.88a.75.75 0 01-1.28.53l-4.72-4.72H4.51c-.88 0-1.704-.507-1.938-1.354A9.01 9.01 0 012.25 12c0-.83.112-1.633.322-2.396C2.806 8.756 3.63 8.25 4.51 8.25H6.75z"></path>
              </svg>
            </p>
            <p>
              <%= @question.tone %>
            </p>
          </div>
          <div class="flex flex-row space-x-2 justify-start items-center">
            <p class="w-4 h-4">
              <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6.633 10.5c.806 0 1.533-.446 2.031-1.08a9.041 9.041 0 012.861-2.4c.723-.384 1.35-.956 1.653-1.715a4.498 4.498 0 00.322-1.672V3a.75.75 0 01.75-.75A2.25 2.25 0 0116.5 4.5c0 1.152-.26 2.243-.723 3.218-.266.558.107 1.282.725 1.282h3.126c1.026 0 1.945.694 2.054 1.715.045.422.068.85.068 1.285a11.95 11.95 0 01-2.649 7.521c-.388.482-.987.729-1.605.729H13.48c-.483 0-.964-.078-1.423-.23l-3.114-1.04a4.501 4.501 0 00-1.423-.23H5.904M14.25 9h2.25M5.904 18.75c.083.205.173.405.27.602.197.4-.078.898-.523.898h-.908c-.889 0-1.713-.518-1.972-1.368a12 12 0 01-.521-3.507c0-1.553.295-3.036.831-4.398C3.387 10.203 4.167 9.75 5 9.75h1.053c.472 0 .745.556.5.96a8.958 8.958 0 00-1.302 4.665c0 1.194.232 2.333.654 3.375z"></path>
              </svg>
            </p>
            <p>
              <%= @question.up_votes %>
            </p>
          </div>
        </div>
      </div>
      <div>
        <h3 class="text-gray-400 text-xl font-light">Keywords:</h3>
        <% if @question.keywords.count > 0 %>
          <div class="flex flex-row justify-start items-center">
            <% @question.keywords.each do |keyword| %>
              <span class="inline-flex items-center px-2 py-1 mr-2 text-sm font-medium text-blue-800 bg-blue-100 rounded dark:bg-blue-900 dark:text-blue-300">
                <%= keyword %>
              </span>
            <% end %>
          </div>
        <% else %>
          <p class="text-gray-500 dark:text-gray-400 font-light">No keyword</p>
        <% end %>
      </div>
      <div>
        <h3 class="text-gray-400 text-xl font-light">Event:</h3>
        <%= link_to room_questions_path(@question.room), class: "text-gray-500 dark:text-gray-400" do %>
          <%= @question.room.event.name %>
        <% end %>
      </div>
    </div>
  </section>
</div>
