<div class="container pt-4">
  <div class="mb-6">
    <%= link_to :back, class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" do %>
      <svg fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12h-15m0 0l6.75 6.75M4.5 12l6.75-6.75"></path>
      </svg>
      Back
    <% end %>
  </div>
  <section>
    <h1 class="inline-block mb-2 font-extrabold text-3xl tracking-tight text-slate-800 dark:text-white">
      <%= @question.title %>
    </h1>
    <div class="flex flex-col space-y-3">
      <div>
        <h3 class="text-gray-400 text-xl font-light">Status:</h3>
        <div class="flex flex-row justify-start items-center space-x-2">
          <%= display_question_status(@question.status) %>
          <% if @question.status == 'rejected' %>
            <span class="text-gray-500 dark:text-gray-400 text-sm text-center">as</span>
            <span class="bg-gray-100 text-gray-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-400 border border-gray-500">
              <%= @question.rejection_cause  %>
            </span>
          <% end %>
        </div>
      </div>
      <div>
        <h3 class="text-gray-400 text-xl font-light">Stats:</h3>
        <div class="flex flex-row space-x-2 justify-start items-center text-gray-500 dark:text-gray-400 font-light">
          <div>
            Upvotes: <%= @question.up_votes %>
          </div>
          <div>
            Created At: <%= @question.created_at.strftime('%Y-%m-%d %H:%M:%S') %>
          </div>
          <div>
            Tone: <%= @question.tone %>
          </div>
        </div>
      </div>
      <div>
        <h3 class="text-gray-400 text-xl font-light">Event:</h3>
        <%= link_to room_questions_path(@question.room), class: "text-gray-500 dark:text-gray-400" do %>
          <%= @question.room.event.name %>
        <% end %>
      </div>
    </div>
  </section>
</div>
