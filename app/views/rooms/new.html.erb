<%# app/views/rooms/new.html.erb %>
<div class="mt-6">
  <div class="mb-6">
    <%= link_to event_rooms_path(@event), class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" do %>
      Back
    <% end %>
  </div>
  <h1 class="inline-block mb-2 font-extrabold text-3xl tracking-tight text-slate-800 dark:text-white">Add a new room:</h1>
  <p class="mb-4 text-sm text-gray-500 dark:text-gray-400">to event: <span class="font-semibold"><%= @event.name %></span></p>
  <%= render "form", room: @room, form_url: event_rooms_path(@event) %>
</div>
