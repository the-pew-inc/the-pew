<!-- app/views/polls/_form.html.erb -->
<%= form_with model: poll do |form| %>
  <%= render partial: 'shared/form_errors', locals: { object: poll } %>
  <div class="mb-6">
    <%= form.label :title, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
    <%= form.text_field :title, required: true, class:"bg-gray-50 border border-gray-300 text-gray-900 text-base md:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
    <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">Keep it simple and below 250 characters ðŸ˜Ž</p>
  </div>
  <div class="mb-6">
    <%= form.label :description, class: "block text-sm font-medium text-gray-900 dark:text-gray-300" %>
    <p class="mb-2 text-sm text-gray-500 dark:text-gray-400">
      Describe the poll in a few words.
    </p>
    <%= form.rich_text_area :description, 
        class:"h-24 md:h-32 block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", 
        placeholder: "Add a short text describing the event. This can also be the agenda of a meeting, etc." %>
  </div>
  <div class="mb-6 flex flex-col md:flex-row items-center justify-start space-x-2">
    <div>
      <%= form.label :duration, "Display duration", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
      <%= form.number_field :duration, inputmode: "numeric", class:"bg-gray-50 border border-gray-300 text-gray-900 text-base md:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
      <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">Time in seconds during which the poll is displayed and open for vote. When empty, the poll remains opened.</p>
    </div>
    <div>
      <%= form.label :max_votes, "Maximum options", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
      <%= form.number_field :max_votes, inputmode: "numeric", class:"bg-gray-50 border border-gray-300 text-gray-900 text-base md:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
      <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">The maximum number of options that a user can vote for. If kept empty, the user can vote for all the options from the poll.</p>
    </div>
    <div>
      <%= form.label :num_votes, "Minimum options", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
      <%= form.number_field :num_votes, inputmode: "numeric", class:"bg-gray-50 border border-gray-300 text-gray-900 text-base md:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
      <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">The minimum number of option(s) a user can vote for. If kept empty there is no minimum required.</p>
    </div>
  </div>
  <div class="mb-6 flex flex-col md:flex-row md:items-center justify-start md:space-x-4">
    <div>
      <label class="relative inline-flex items-center cursor-pointer">
        <%= form.check_box :add_option, class: "sr-only peer" %>
        <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
        <span class="ml-3 text-sm font-medium text-gray-900 dark:text-gray-300">Allow users to add an option after voting</span>
      </label>
    </div>
    <div>
      <label class="relative inline-flex items-center cursor-pointer">
        <%= form.check_box :is_anonymous, class: "sr-only peer" %>
        <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
        <span class="ml-3 text-sm font-medium text-gray-900 dark:text-gray-300">Make it anonymous</span>
      </label>
    </div>
  </div>
  <div class="mb-6" data-controller="invite-toggle">
    <h3 class="mb-5 text-lg font-medium text-gray-900 dark:text-white">Choose who can participate:</h3>
    <div class="grid gap-2 md:grid-cols-2">
      <div class="flex justify-between items-center px-4 border border-gray-200 rounded dark:border-gray-700">
        <div class="flex justify-start space-x-3 items-center">
          <svg class="w-6 h-6 text-gray-900 dark:text-gray-300" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M21.721 12.752a9.711 9.711 0 00-.945-5.003 12.754 12.754 0 01-4.339 2.708 18.991 18.991 0 01-.214 4.772 17.165 17.165 0 005.498-2.477zM14.634 15.55a17.324 17.324 0 00.332-4.647c-.952.227-1.945.347-2.966.347-1.021 0-2.014-.12-2.966-.347a17.515 17.515 0 00.332 4.647 17.385 17.385 0 005.268 0zM9.772 17.119a18.963 18.963 0 004.456 0A17.182 17.182 0 0112 21.724a17.18 17.18 0 01-2.228-4.605zM7.777 15.23a18.87 18.87 0 01-.214-4.774 12.753 12.753 0 01-4.34-2.708 9.711 9.711 0 00-.944 5.004 17.165 17.165 0 005.498 2.477zM21.356 14.752a9.765 9.765 0 01-7.478 6.817 18.64 18.64 0 001.988-4.718 18.627 18.627 0 005.49-2.098zM2.644 14.752c1.682.971 3.53 1.688 5.49 2.099a18.64 18.64 0 001.988 4.718 9.765 9.765 0 01-7.478-6.816zM13.878 2.43a9.755 9.755 0 016.116 3.986 11.267 11.267 0 01-3.746 2.504 18.63 18.63 0 00-2.37-6.49zM12 2.276a17.152 17.152 0 012.805 7.121c-.897.23-1.837.353-2.805.353-.968 0-1.908-.122-2.805-.353A17.151 17.151 0 0112 2.276zM10.122 2.43a18.629 18.629 0 00-2.37 6.49 11.266 11.266 0 01-3.746-2.504 9.754 9.754 0 016.116-3.985z"></path>
          </svg>
          <%= form.label :poll_type, "Open to the world", class: "w-full py-4 ml-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
        </div>
        <%= form.radio_button :poll_type, :universal, 
            data: { action: 'invite-toggle#close' },
            class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
      </div>
      <div class="flex justify-between items-center px-4 border border-gray-200 rounded dark:border-gray-700">
        <div class="flex justify-start space-x-3 items-center">
          <svg class="w-6 h-6 text-gray-900 dark:text-gray-300" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M4.5 6.375a4.125 4.125 0 118.25 0 4.125 4.125 0 01-8.25 0zM14.25 8.625a3.375 3.375 0 116.75 0 3.375 3.375 0 01-6.75 0zM1.5 19.125a7.125 7.125 0 0114.25 0v.003l-.001.119a.75.75 0 01-.363.63 13.067 13.067 0 01-6.761 1.873c-2.472 0-4.786-.684-6.76-1.873a.75.75 0 01-.364-.63l-.001-.122zM17.25 19.128l-.001.144a2.25 2.25 0 01-.233.96 10.088 10.088 0 005.06-1.01.75.75 0 00.42-.643 4.875 4.875 0 00-6.957-4.611 8.586 8.586 0 011.71 5.157v.003z"></path>
          </svg>
          <%= form.label :poll_type, "Only people from your organization",
              class: "w-full py-4 ml-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
        </div>
        <%= form.radio_button :poll_type, :restricted, 
            data: { action: 'invite-toggle#open' },
            class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
      </div>
      <div class="flex justify-between items-center px-4 border border-gray-200 rounded dark:border-gray-700">
        <div class="flex justify-start space-x-3 items-center">
          <svg class="w-6 h-6 text-gray-900 dark:text-gray-300" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path d="M3.53 2.47a.75.75 0 00-1.06 1.06l18 18a.75.75 0 101.06-1.06l-18-18zM22.676 12.553a11.249 11.249 0 01-2.631 4.31l-3.099-3.099a5.25 5.25 0 00-6.71-6.71L7.759 4.577a11.217 11.217 0 014.242-.827c4.97 0 9.185 3.223 10.675 7.69.12.362.12.752 0 1.113z"></path>
            <path d="M15.75 12c0 .18-.013.357-.037.53l-4.244-4.243A3.75 3.75 0 0115.75 12zM12.53 15.713l-4.243-4.244a3.75 3.75 0 004.243 4.243z"></path>
            <path d="M6.75 12c0-.619.107-1.213.304-1.764l-3.1-3.1a11.25 11.25 0 00-2.63 4.31c-.12.362-.12.752 0 1.114 1.489 4.467 5.704 7.69 10.675 7.69 1.5 0 2.933-.294 4.242-.827l-2.477-2.477A5.25 5.25 0 016.75 12z"></path>
          </svg>
          <%= form.label :poll_type, "Invite only", 
              class: "w-full py-4 ml-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
        </div>
        <%= form.radio_button :poll_type, :invite_only, 
            data: { action: 'invite-toggle#open' },
            class: "w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" %>
      </div>
    </div>
    <div class="mt-4 w-full" data-invite-toggle-target="form">
      <h4 class="font-bold dark:text-white">
        Invite users to join:
      </h4>
      <div class="mt-2 text-sm text-gray-500 dark:text-gray-400 w-96">
        You can search for users within your organization, past invites or simply add a new one by typing their email address.
      </div>
      <div class="mt-2">
        <%# Search / filter users %>
        <label for="table-search" class="sr-only">Search</label>
        <div class="relative" id="autocomplete" 
             data-controller="autocomplete user-invites" 
             data-autocomplete-url-value="<%= invite_search_users_path %>" role="combobox">
